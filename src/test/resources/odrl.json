// allow a user in role seller, that is from the organization offering it to modify

{
  "uid": "my-policy",
  "permission": [
    {
      "uid": "first-permission",
      "action": "http://www.w3.org/ns/odrl/2/modify",
      "assigner": "did:web:my-marketplace",
      "target": {
          "@type": "odrl:AssetCollection",
          "source": "dome-op:product-offering",
          "refinement": [
            {
              "leftOperand": "dome-op:relatedParty_owner",
              "operator": "eq",
              "rightOperand": "dome-op:currentUser_organization"
            }
          ]
      },
      "assignee": {
          "@type": "odrl:PartyCollection",
          "source": "dome-op:currentUser",
          "refinement": [
            {
              "leftOperand": "dome-op:role",
              "operator": "hasPart",
              "rightOperand": "seller"
            }
          ]
      }
    }
  ]

}